<!doctype html>
<html lang="en">

<head>
  <title>Hugo.L Portfolio</title>
  <meta name="description" content="Site web portfolio Hugo Lavergne, freelancer dÃ©veloppeur web fullstack, Laravel/NodeJS - VueJs/Angular" />
  <meta property="image" content="https://lh3.googleusercontent.com/jBkRxXfYz1Yp-hPvJI13HrRhdWcb2lVHL13B6-OkxIxLZJbzqkim11VYDS69hM1pAZwmdSoK7VwcCkg2rzRpTnJc3qs" />
  <meta property="og:image:width" content="260px" />
  <meta property="og:image:height" content="260px" />

  {{>head}}
</head>

<body>
  <div class="blocks-page">
    {{>header2}}

    <section
      style="background:url('{{{page.hero.img_background}}}=s2048');background-size:cover;background-position:center;">
      <div class="gradient-div py-3" style="height:85vh">
        <div class="container">
          <div class="row justify-content-center header-row">
            <div class="col-12 col-md-8 col-lg-7 text-center text-white">
              <img src="{{{page.hero.img_profile}}}=s200-c" alt="" style="width: 185px; height: 185px; border-radius: 50%"
                class="mt-5">
              <h1 class="display-3 mt-4">{{page.hero.greeting}}</h1>
              <p class="lead text-white mb-4 mt-1">
                {{page.hero.introduction}}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-5 py-md-7" id="project-section">
      <div class="container py-md-5">
        <div class="row block-header">
          <div class="col-sm-8 mx-auto text-center">
            <h1 class="display-4 mt-2">{{page.projects.header}}</h1>
            <hr>
            <p class="lead">{{page.projects.subheader}} </p>
          </div>
        </div>
        <div class="row mt-5 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000">
          {{#projects}}
          <div class="col-md-4 col-sm-12 mb-2r">
            <a href="/project/{{slug}} ">
              <div class="position-relative project">
                <div class="image position-relative ">
                  <img src="{{{image}}}=s650-c" class="img-fluid w-100 d-block">
                  <div class="overlay-box">
                    <div class="overlay-inner overlay-content">
                      <h5 class="mb-0">{{name}}</h5>
                      <p>{{ category }}</p>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
          {{/projects}}
        </div>
      </div>
    </section>


    <section class="py-md-5 block" id="service-section">
      <div class="container">
        <div class="row block-header">
          <div class="col-sm-8 mx-auto text-center">
            <h1 class="display-4 mt-2">Services</h1>
            <hr>
            <p class="lead">{{page.service.subheader}}</p>
          </div>
        </div>
        <div class="row mt-5">
          {{#page.service.services}}
          <div class="col-md-4 service mb-5 aos-init aos-animate">
            <img class="icon mr-4" src="{{{image}}}">
            <div class="content">
              <h5>{{name}}</h5>
              <p>{{description}}</p>
            </div>
          </div>
          {{/page.service.services}}
        </div>
      </div>
    </section>

    <section class="py-md-5 block text-center contact-block" id="contact-section">
      <div class="container">
        <div class="row block-header">
          <div class="col-sm-8 mx-auto text-center">
            <h1 class="display-4 mt-2 section-title">{{page.contact.header}}</h1>
            <hr>
            <p class="lead">{{page.contact.subheader}} </p>
          </div>
        </div>
        <div class="row mt-5">
          <form class="col-md-4 col-xl-6 mx-auto input-border">
            <div class="form-group">
              <input id="contact-form-name" type="text" class="form-control form-control-lg" placeholder="Name">
            </div>
            <div class="form-group">
              <input id="contact-form-email" type="text" class="form-control form-control-lg" placeholder="Email">
            </div>
            <div class="form-group">
              <input id="contact-form-message" type="text" class="form-control form-control-lg" placeholder="Message">
            </div>
            <button id="contact-submit" class="btn btn-block btn-lg btn-info mb-5 mt-5">Send</button>
            <span id="successmessage"></span>
            <span id="errormessage"></span>
          </form>
          
        </div>
      </div>
    </section>


    {{>footer}}
  </div>

  {{>scripts}}
  
</body>

</html>